#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>
#include <stdbool.h>
#define n 10000

void GenerazNum()
{
    int i;
    int ArrayNum[n];
    double tempoInizio, tempoFine, tempoTotale;
    clock() == 0;
    
    tempoInizio = clock();
    
    srand(time(0));
    for (i = 0; i < n; i++) {
    ArrayNum[i] = 1 + rand()%n;
    }
    
    /*for(i = 0; i < n; i++) {
        printf("%d ", ArrayNum[i]);
    }*/
    
    tempoFine = clock();
    tempoTotale = (double)(tempoFine - tempoInizio) / CLOCKS_PER_SEC;
    printf("\nIl tempo impiegato per la generazione di numeri casuali è: %f", tempoTotale); 
}

void OrdinamentoBolla (int *ArrayNum)
{
    int i, j; 
    int NumSostituito; 
    
    double tempoInizio, tempoFine, tempoTotale;
    tempoInizio = clock(); 
    	for (j = 0; j < n - 1; j++)
    	{
    		for (i = 0; i < n - 1; i++)
    		{
    			if (ArrayNum[i] > ArrayNum[i + 1])
    			{	
    				NumSostituito = ArrayNum[i];
    				ArrayNum[i] = ArrayNum[i + 1];
    				ArrayNum[i + 1] = NumSostituito;
    			}
    		}
    	}
    	tempoFine = clock();
    	tempoTotale = (double)(tempoFine - tempoInizio) / CLOCKS_PER_SEC;
        printf("\nIl tempo di ordinamento per bolla è: %f", tempoTotale);
}

void RicercaSequenziale(int *ArrayNum) {
    int NumPosizione  = n;
    int NumCercato    = 4444; 
    int Contatore     = 0;
    int i;
    bool NumTrovato   = false;
    
    double tempoInizio, tempoFine, tempoTotale;
    tempoInizio = clock(); 
    
    for (i = 0; i < n; i++) {
        if (ArrayNum[Contatore] = NumCercato)
            NumTrovato = true;
        else
            Contatore++;
    }
    
    if (NumTrovato == false)
        printf("\nIl numero %d non è presente nel vettore.", NumCercato);
    else 
        printf("\nIl numero %d è presente nel vettore in posizione %d.", NumCercato, Contatore);
        
    tempoFine = clock();
    tempoTotale = (double)(tempoFine - tempoInizio) / CLOCKS_PER_SEC;
    printf("\nIl tempo impiegato per la ricerca sequenziale di un elemento è; %f", tempoTotale);
}

int main()
{ 
    int ArrayNum[n];
    GenerazNum();
    OrdinamentoBolla(ArrayNum);
    RicercaSequenziale(ArrayNum);
    return 0;    
}
